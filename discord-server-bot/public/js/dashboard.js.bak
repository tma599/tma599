function connectWebSocket() {
    const protocol = window.location.protocol === 'https' ? 'wss' : 'ws';
    const ws = new WebSocket(`${protocol}://${window.location.host}`);
    ws.onopen = () => { logContainer.innerHTML += '<div class="log-entry">[WebSocket] æ¥ç¶šãŒç¢ºç«‹ã•ã‚Œã¾ã—ãŸã€‚</div>'; };
    ws.onclose = () => { logContainer.innerHTML += '<div class="log-entry error">[WebSocket] æ¥ç¶šãŒåˆ‡ã‚Œã¾ã—ãŸã€‚5ç§’å¾Œã«å†æ¥ç¶šã—ã¾ã™...</div>'; setTimeout(connectWebSocket, 5000); };
    ws.onerror = () => { logContainer.innerHTML += `<div class="log-entry error">[WebSocket] ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸã€‚</div>`; };
    ws.onmessage = (event) => {
        const { type, data } = JSON.parse(event.data);
        const entry = document.createElement('div');
        entry.className = `log-entry ${type}`;
        entry.textContent = data;
        const isScrolledToBottom = logContainer.scrollHeight - logContainer.clientHeight <= logContainer.scrollTop + 5;
        logContainer.appendChild(entry);
        if (isScrolledToBottom) logContainer.scrollTop = logContainer.scrollHeight;
    };
}

