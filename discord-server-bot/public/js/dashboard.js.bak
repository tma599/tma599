function getDragAfterElementForChannels(container, y) {
    const draggableElements = [...container.querySelectorAll('.channel-item:not(.dragging)')];
    return draggableElements.reduce((closest, child) => {
        const box = child.getBoundingClientRect();
        const offset = y - box.top - box.height / 2;
        if (offset < 0 && offset > closest.offset) {
            return { offset: offset, element: child };
        } else {
            return closest;
        }
    }, { offset: Number.NEGATIVE_INFINITY }).element;
}

function makeChannelsDraggable(guildId) {
    const containers = document.querySelectorAll('.channel-list');
    const saveButton = document.getElementById('save-channel-order-btn');
    let draggedItem = null;

    const startDrag = (e) => {
        // e.target will be the element that is being dragged
        draggedItem = e.target;
        setTimeout(() => {
            if (draggedItem) draggedItem.classList.add('dragging');
        }, 0);
        if (saveButton) saveButton.style.display = 'inline-block';
    };

    const endDrag = () => {
        if (draggedItem) {
            draggedItem.classList.remove('dragging');
        }
        // Clean up draggable attribute
        const draggableItem = document.querySelector('.channel-item[draggable="true"]');
        if (draggableItem) {
            draggableItem.removeAttribute('draggable');
        }
        draggedItem = null;
    };

    const moveDrag = (e) => {
        if (!draggedItem) return;
        e.preventDefault();
        const y = e.clientY || (e.touches && e.touches[0] ? e.touches[0].clientY : 0);
        if (!y) return;

        const container = draggedItem.closest('.channel-list');
        const afterElement = getDragAfterElementForChannels(container, y);
        if (afterElement === null) {
            container.appendChild(draggedItem);
        } else {
            container.insertBefore(draggedItem, afterElement);
        }
    };

