function generateServerInfoHTML(guild) {
    const sortedRoles = [...guild.roles].sort((a, b) => b.position - a.position);
    return `
        <div class="info-grid">
            <div class="info-card"><h3>ã‚µãƒ¼ãƒãƒ¼æƒ…å ±</h3><ul><li><strong>ãƒ¡ãƒ³ãƒãƒ¼æ•°:</strong> ${guild.memberCount}</li></ul></div>
